            <h1 class="wv-heading--title">
            Edit <%= resource_name.to_s.humanize %>
            </h1>
      <hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field form-group">
  <%= f.text_field :username,placeholder: :username, autofocus: true, autocomplete: "false",:class=>"form-control my-input"%>
</div>


<div class="field form-group display-inline-block" >
<label>Target (No. of days per post)</label>
<%= f.select :target,[1,2,3,4,5,6,7,14,30],{},:class=>"form-control my-input browser-default custom-select"%>
</div>

<div class="field form-group">
<%= f.text_area :description,placeholder: "Description (280 characters MAX)", autofocus: true, autocomplete: "false",:class=>"form-control my-input textarealg"%>
</div>

  <em><i>Leave blank if you don't want to change</i></em>
<div class="field form-group">
  <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters MIN)",autocomplete: "new-password",:class=>"form-control my-input" %>
  
  </div>

<div class="field form-group">
  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation",autocomplete: "new-password", :class=>"form-control my-input" %>
</div>
<em><i>To confirm your changes</i></em>
<div class="field form-group">
  <%= f.password_field :current_password, placeholder: "Current Password",autocomplete: "current-password", :class=>"form-control my-input" %>
</div>


  <%= f.submit "Update", :class=>"btn blue-gradient"%>

<% end %>
</div>
</div>
</div>
<br>
<br>
